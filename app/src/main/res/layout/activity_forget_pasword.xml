<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ForgetPasword"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:text="Forget Password"

        android:textSize="40dp"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:inputType="textPassword"
        android:id="@+id/et_password"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/err_password"
        android:textColor="#EF2B1D"
        android:textSize="10sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_newpass"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/err_newpass"
        android:textColor="#EF2B1D"
        android:textSize="10sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/et_confirmpass"
        android:hint="Enter Password"
        android:textSize="30sp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/err_confpass"
        android:textColor="#EF2B1D"
        android:textSize="10sp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="60dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#E61A0B"
        android:onClick="forgetPassword"
        android:textSize="20sp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:onClick="login"
            android:textColor="#000000"
            android:text="Already Account? Sign in"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>